" view line number by default
set number

" set encoding to utf8
set enc=utf8

" set the cursorline horizontally
" set cursorline

" turn syntax hightling on
syntax on

" set auto-indentation
set autoindent

" cursor does not reach bottom of page, but it scrolls
set scrolloff=10

" tab characters appear 4 character cells wide
set tabstop=4
set shiftwidth=4

" visual bell
set visualbell
